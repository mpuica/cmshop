<div class="col-md-6">
    <div class="product">
        <div class="row">
            <div class="col-md-6 product-image">
                <img src="{{ asset('img/products/'~product.image) }}" class="img-responsive">
            </div>
            <div class="col-md-6 product-info">
                <div class="row">
                    <div class="col-md-12 product-name">
                        {{ product.name }}
                    </div>
                    <div class="col-md-12 product-code">
                        item # {{ product.code }}
                    </div>
                    <div class="col-md-12 product-price">
                        {{ product.price|number_format(2, '.', ',')~' '~utils.currency_symbol }}
                    </div>
                    <div class="col-md-12 product-order">
                        <a class="button-order" href="" onclick="return false;" data-item="{{ product.id }}">
                            <img src="{{ asset('img/cmshop_add_to_order.png') }}">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>